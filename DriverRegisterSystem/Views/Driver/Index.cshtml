@model IEnumerable<Driver>;
@{
    ViewData["Title"] = "Drivers";
}


<div class="container">
    <div class="row justify-content-center p-5">
        <div class="col-md-6 card shadow p-3 justify-content-center align-items-left">
            <h2 class="text-center text-info">@ViewData["Title"]</h2>
            <div class="row">
                <div class="d-flex justify-content-between p-3">
                    <form asp-action="Index" class="btn-group">
                        <input type="text" name="searchString" placeholder="Enter Name" value="@ViewData["CurrentFilter"]" />
                        <input type="submit" value="Filter" class="btn btn-primary" />
                    </form>
                    <a asp-action="AddDriver" class="btn btn-primary">Add Driver</a>
                </div>
            </div>
            <ul class="list-group">
                @foreach (var item in Model)
                {
                    <li class="list-group-item border-0">
                        <a class="text-decoration-none text-black fw-bold" data-bs-toggle="collapse" href="#driverOptions-@item.DriverId" role="button" aria-expanded="false" aria-controls="driverOptions-@item.DriverId">
                            @item.DriverName
                        </a>
                        <div class="collapse" id="driverOptions-@item.DriverId">
                            <div class="mt-2" role="group">
                                <a asp-controller="Driver" asp-action="DriverInfo" asp-route-id="@item.DriverId" class="btn btn-primary me-1">Driver Info</a>
                                <a asp-controller="Driver" asp-action="EditDriver" asp-route-id="@item.DriverId" class="btn btn-success ms-1 me-1">Update</a>
                                <a asp-controller="Driver" asp-action="DeleteDriver" asp-route-id="@item.DriverId" class="btn btn-danger ms-1">Delete</a>
                            </div>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>