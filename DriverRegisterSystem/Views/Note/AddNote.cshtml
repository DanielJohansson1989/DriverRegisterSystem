@model int

<form asp-action="AddNote">
    <div class="form-group">
        <label for="noteDate">Note Date:</label>
        <input type="date" name="noteDate" class="form-control" value="@ViewData["NoteDate"]" />
    </div>
    <div class="form-group">
        <label for="noteDescription">Note Description:</label>
        <input type="text" name="noteDescription" class="form-control" value="@ViewData["NoteDescription"]" />
    </div>
    <div class="form-group">
        <label for="income">Income:</label>
        <input type="number" name="income" class="form-control" value="@ViewData["Income"]" />
    </div>
    <div class="form-group">
        <label for="expense">Expense:</label>
        <input type="number" name="expense" class="form-control" value="@ViewData["Expense"]" />
    </div>
    <input type="hidden" name="responsibleEmployee" value="thisEmployee" />
    <input type="hidden" name="driverId" value="@Model" />
    <button type="submit" class="btn btn-primary">Add Note</button>
</form>